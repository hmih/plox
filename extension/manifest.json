{
  "manifest_version": 3,
  "name": "X.com Account Flags",
  "description": "All we're missing is greentext",
  "version": "0.2.0",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://x.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://www.x.com/*"
      ],
      "js": [
        "content.js"
      ],
      "world": "ISOLATED",
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "https://x.com/*",
        "https://www.x.com/*"
      ]
    }
  ]
}
